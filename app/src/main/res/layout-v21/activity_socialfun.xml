<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/elder_back_new1"
    tools:context=".socialfun">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageButton
                android:id="@+id/blecoll"
                android:layout_width="wrap_content"
                android:layout_height="231dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ps01" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="231dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/account01" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="231dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/data02" />

            <ImageButton
                android:id="@+id/uploadd"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/upload02" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>