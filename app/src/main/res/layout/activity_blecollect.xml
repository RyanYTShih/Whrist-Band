<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_social"
    tools:context=".BLECOLLECT">

    <Button
        android:id="@+id/connect_button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="77dp"
        android:text="連接"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="307dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/connect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="148dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="87dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="33dp"
                android:layout_height="31dp"
                app:srcCompat="@drawable/bleicon"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="84dp" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="111dp"
                android:layout_height="29dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="111dp"
                tools:layout_editor_absoluteY="84dp">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/mBleStateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="68dp"
                android:layout_height="36dp"
                android:background="@color/colorPrimary"
                android:text="搜尋"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="123dp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="66dp"
                android:layout_height="36dp"
                android:background="@color/colorPrimary"
                android:text="停止"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="123dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/ListView1"
                android:layout_width="123dp"
                android:layout_height="125dp"
                android:background="@color/colorble"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="235dp">

            </ListView>

            <ListView
                android:id="@+id/ListView2"
                android:layout_width="135dp"
                android:layout_height="125dp"
                android:background="@color/colorble"
                android:visibility="visible"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="235dp">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="251dp"
            android:layout_height="61dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="302dp">

            <LinearLayout
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/uuid_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Uuid" />

            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="註冊"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:visibility="visible"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="470dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="251dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="333dp">

            <LinearLayout
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/uuid"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:text="Uuid" />

            </LinearLayout>

            <Button
                android:id="@+id/unregister_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解除"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="470dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>